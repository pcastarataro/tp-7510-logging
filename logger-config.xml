<?xml version="1.0"?>
<loggers>
	<logger name="logger1" level="Debug">
		<log>
			<baseformat>%d{dd-MM-YYYY hh:mm:ss.SSS} - [%p] [%g] %t %F %L %%- %m %n</baseformat>
			<outputstring>ar.fiuba.tecnicas.logging.log.ConsoleOutput:</outputstring>
			<filters>
				<customFilter class="ar.fiuba.tecnicas.logging.filter.OddLineNumberFilter">
				</customFilter>
			</filters>
			<delimiter>-</delimiter>
		</log>
	</logger>
	<logger name="logger2" level="Debug">
		<log>
			<baseformat>%d{dd-MM-YYYY hh:mm:ss.SSS} - [%p] [%g] %t %F %L %%- %m %n</baseformat>
			<outputstring>ar.fiuba.tecnicas.logging.log.StaticListOutput:</outputstring>
			<filters>
				<filterpattern>.*tp.*</filterpattern>
				<customFilter class="ar.fiuba.tecnicas.logging.filter.LevelFilter">DEBUG</customFilter>
			</filters>
			<delimiter>-</delimiter>
		</log>
	</logger>
	<logger name="logger3" level="Trace">
		<log>
			<baseformat>%J</baseformat>
			<outputstring>ar.fiuba.tecnicas.logging.log.FileOutput:logger3.json</outputstring>
			<filters>
				<customFilter class="ar.fiuba.tecnicas.logging.filter.LevelFilter">ERROR</customFilter>
			</filters>
			<delimiter>-</delimiter>
		</log>
	</logger>
</loggers>
